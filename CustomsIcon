-- Clone function thay vì table.clone
local function deepClone(tbl)
	local clone = {}
	for i, v in ipairs(tbl) do
		clone[i] = v
	end
	return clone
end

-- Shuffle quotes
local function shuffle(tbl)
	local n = #tbl
	for i = n, 2, -1 do
		local j = math.random(i)
		tbl[i], tbl[j] = tbl[j], tbl[i]
	end
	return tbl
end

