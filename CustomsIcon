-- Function to tween transparency (fade in/out)
local function tweenStatusIcon(targetTransparency)
	local tween = TweenService:Create(statusIcon, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		ImageTransparency = targetTransparency
	})
	tween:Play()
end


